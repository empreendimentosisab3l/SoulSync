generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String // Senha hashada (bcrypt)
  plan      String   @default("standard") // standard, premium
  status    String   @default("active") // active, inactive, pending_payment
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
